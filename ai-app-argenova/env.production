# Node.js Environment
NODE_ENV=production

# MongoDB Configuration (Remote)
MONGODB_URI=mongodb://remote-server:27017/ai_logs
# MONGODB_URI=mongodb://mongodb:27017/ai_logs  # Local Docker

# Qdrant Configuration (Remote)
QDRANT_URL=http://remote-server:6333
# QDRANT_URL=http://qdrant:6333  # Local Docker
QDRANT_COLLECTION=ai_logs

# Ollama Configuration (Remote)
OLLAMA_URL=http://remote-server:11434/api
# OLLAMA_URL=http://ollama:11434/api  # Local Docker
OLLAMA_CHAT_MODEL=llama3
OLLAMA_EMBEDDING_MODEL=all-minilm

# AI Configuration
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=512

# Server Configuration
PORT=3000

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Security
TRUST_PROXY=true 